<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Customization of the application theme for light mode. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Normal text and background -->
        <item name="android:colorBackground">@color/whiteBackground</item>
        <item name="colorOnBackground">@color/normalFont</item>
        <item name="android:textColorSecondary">@color/lightFont</item>

        <!-- Elevated text and background, e. g. CardView -->
        <item name="colorSurface">@color/lightGreyBackground</item>
        <item name="colorOnSurface">@color/normalFont</item>

        <!-- Primary color is used by the tool bar and status bar -->
        <item name="colorPrimary">@color/lightGreyBackground</item>
        <item name="colorPrimaryDark">@color/darkBlueBackground</item>
        <item name="colorOnPrimary">@color/normalFont</item>

        <!-- Secondary color is used by buttons and links, variant is used for TAN / ATC -->
        <item name="colorSecondary">@color/blueAccent</item>
        <item name="colorSecondaryVariant">@color/darkFont</item>
        <item name="colorOnSecondary">@color/whiteBackground</item>

        <!-- Errors and QR code scanner (red) -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/whiteBackground</item>
    </style>

</resources>
