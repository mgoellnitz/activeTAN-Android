<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/solarizedBase02</item>
        <item name="colorPrimaryDark">@color/solarizedBase03</item>
        <item name="colorAccent">@color/solarizedBlue</item>
        <item name="android:colorBackground">@color/solarizedBase3</item>
        <item name="android:colorForeground">@color/solarizedBase2</item>
        <item name="android:textColorPrimary">@color/solarizedBase00</item>
        <item name="android:textColorPrimaryInverse">@color/solarizedGreen</item>
        <item name="android:textColorSecondary">@color/solarizedBase01</item>
        <item name="android:textColorSecondaryInverse">@color/solarizedBase1</item>

        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="android:toolbarStyle">?android:attr/actionBarStyle</item>
        <item name="qrScannerBorderColor">@color/solarizedRed</item>
        <item name="bankLogoBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/solarizedBase2</item>
    </style>

</resources>
